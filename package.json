{
  "name": "actions-toolkit",
  "version": "0.0.1",
  "description": "A toolkit for building GitHub Actions in Node.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "jest --coverage && standard",
    "build": "rimraf lib && tsc -p tsconfig.json",
    "lint": "tslint --project tests",
    "test:ts": "tsc --noEmit -p tests && jest --coverage && npm run lint",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JasonEtco/actions-toolkit.git"
  },
  "keywords": [],
  "author": "Jason Etcovitch <jasonetco@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JasonEtco/actions-toolkit/issues"
  },
  "homepage": "https://github.com/JasonEtco/actions-toolkit#readme",
  "devDependencies": {
    "@octokit/webhooks": "^5.0.2",
    "@types/dotenv": "^4.0.3",
    "@types/execa": "^0.9.0",
    "@types/jest": "^23.3.9",
    "@types/js-yaml": "^3.11.2",
    "@types/node": "^10.12.2",
    "jest": "^23.5.0",
    "standard": "^11.0.1",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.6"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "dependencies": {
    "@octokit/rest": "^15.15.1",
    "execa": "^1.0.0",
    "js-yaml": "^3.12.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/lib/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      ".+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": false
      }
    }
  }
}
